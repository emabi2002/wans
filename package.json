{
  "name": "the-wans-platform",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd packages/database && bunx prisma migrate deploy",
    "db:generate": "cd packages/database && bunx prisma generate",
    "db:studio": "cd packages/database && bunx prisma studio"
  },
  "dependencies": {
    "@netlify/functions": "^2.8.2"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
